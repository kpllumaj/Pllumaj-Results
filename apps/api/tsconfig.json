{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "sourceMap": true,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@app/*": ["./*"],
      "@modules/*": ["./modules/*"],
      "@common/*": ["./common/*"],
      "@prisma/*": ["./prisma/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
